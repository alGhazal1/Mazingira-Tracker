<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mazingira Tracker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid #ddd;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .item-info {
            margin-bottom: 15px;
        }
        .item-info label {
            font-weight: bold;
        }
        .media-link {
            color: blue;
            text-decoration: underline;
        }
        .no-media {
            color: red;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Species</h1>
    <p>Discover plant and animal species in your location</p>

    <!-- Display scientific name -->
    <div class="item-info">
        <label>Scientific Name:</label>
        <p><%= data.scientificName || 'N/A' %></p>
    </div>

    <!-- Display species -->
    <div class="item-info">
        <label>Species:</label>
        <p><%= data.species || 'N/A' %></p>
    </div>

    <!-- Display generic name -->
    <div class="item-info">
        <label>Generic Name:</label>
        <p><%= data.genericName || 'N/A' %></p>
    </div>

    <!-- Display date identified -->
    <div class="item-info">
        <label>Date Identified:</label>
        <p><%= data.dateIdentified || 'N/A' %></p>
    </div>

    <!-- Display latitude -->
    <div class="item-info">
        <label>Decimal Latitude:</label>
        <p><%= data.decimalLatitude || 'N/A' %></p>
    </div>

    <!-- Display longitude -->
    <div class="item-info">
        <label>Decimal Longitude:</label>
        <p><%= data.decimalLongitude || 'N/A' %></p>
    </div>

    <!-- Display continent -->
    <div class="item-info">
        <label>Continent:</label>
        <p><%= data.continent || 'N/A' %></p>
    </div>

    <!-- Display state/province -->
    <div class="item-info">
        <label>State/Province:</label>
        <p><%= data.stateProvince || 'N/A' %></p>
    </div>

    <!-- Display event date -->
    <div class="item-info">
        <label>Event Date:</label>
        <p><%= data.eventDate || 'N/A' %></p>
    </div>

    <!-- Display locality -->
    <div class="item-info">
        <label>Verbatim Locality:</label>
        <p><%= data.verbatimLocality || 'N/A' %></p>
    </div>

    <!-- Display media URL (or show "No URL available") -->
    <div class="item-info">
        <label>Media URL:</label>
        <% if (data.mediaUrl !== 'No URL available') { %>
            <p><a href="<%= data.mediaUrl %>" target="_blank" class="media-link">View Image</a></p>
        <% } else { %>
            <p class="no-media"><%= data.mediaUrl %></p>
        <% } %>
    </div>
</div>

</body>
</html>
